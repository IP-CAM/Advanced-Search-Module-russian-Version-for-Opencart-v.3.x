{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-category">{{ entry_display_category }}</label>
            <div class="col-sm-10">
              <select name="module_advanced_search_nik_display_category" id="input-display-category" class="form-control">
                {% if module_advanced_search_nik_display_category %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-count-category-for-display">{{ entry_count_category_for_display }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_advanced_search_nik_count_category_for_display" value="{{ module_advanced_search_nik_count_category_for_display }}" placeholder="{{ entry_count_category_for_display }}" id="input-count-category-for-display" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-brands">{{ entry_display_brands }}</label>
            <div class="col-sm-10">
              <select name="module_advanced_search_nik_display_brands" id="input-display-brands" class="form-control">
                {% if module_advanced_search_nik_display_brands %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-count-brands-for-display">{{ entry_count_brands_for_display }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_advanced_search_nik_count_brands_for_display" value="{{ module_advanced_search_nik_count_brands_for_display }}" placeholder="{{ entry_count_brands_for_display }}" id="input-count-brands-for-display" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-count-items-for-display">{{ entry_count_items_for_display }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_advanced_search_nik_count_items_for_display" value="{{ module_advanced_search_nik_count_items_for_display }}" placeholder="{{ entry_count_items_for_display }}" id="input-count-items-for-display" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-product-image">{{ entry_display_product_image }}</label>
            <div class="col-sm-10">
              <select name="module_advanced_search_nik_display_product_image" id="input-display-product-image" class="form-control">
                {% if module_advanced_search_nik_display_product_image %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product">{{ entry_favorite_product }}</label>
            <div class="col-sm-10">
              <input type="text" name="product_name" value="" placeholder="{{ entry_favorite_product }}" id="input-product" class="form-control" />
              <div id="favorite-product" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for product in products %}
                  <div id="favorite-product{{ product.product_id }}"><i class="fa fa-minus-circle"></i> {{ product.name }}
                    <input type="hidden" name="module_advanced_search_nik_favorite_products[]" value="{{ product.product_id }}" />
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-module-class">{{ entry_module_class }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_advanced_search_nik_module_class" value="{{ module_advanced_search_nik_module_class }}" placeholder="{{ entry_module_class }}" id="input-module-class" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_advanced_search_nik_status" id="input-status" class="form-control">
                {% if module_advanced_search_nik_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $('input[name=\'product_name\']').autocomplete({
        source: function(request, response) {
            $.ajax({
                url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
                dataType: 'json',
                success: function(json) {
                    response($.map(json, function(item) {
                        return {
                            label: item['name'],
                            value: item['product_id']
                        }
                    }));
                }
            });
        },
        select: function(item) {
            $('input[name=\'product_name\']').val('');

            $('#favorite-product' + item['value']).remove();

            $('#favorite-product').append('<div id="favorite-product' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="module_advanced_search_nik_favorite_products[]" value="' + item['value'] + '" /></div>');
        }
    });

    $('#favorite-product').delegate('.fa-minus-circle', 'click', function() {
        $(this).parent().remove();
    });
</script>
{{ footer }}