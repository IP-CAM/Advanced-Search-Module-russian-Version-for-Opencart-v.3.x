      let advancedSearch =
          $('#advanced-search-field').autocomplete({
              // delay: 100,
              source: function(request, response) {
                  $.ajax({
                      url: 'index.php?route=extension/module/advanced_search_nik/autocomplete&filter_name=' +  encodeURIComponent(request.term) + '&filter_category=' + $('#advanced-search-selected-category-id').val(),
                      dataType: 'json',
                      success: function(json) {
                          response($.map(json, function(item) {
                              return {
                                  label: item.name,
                                  value: item.product_id,
                                  image: item.image
                              }
                          }));
                      }
                  });
              },
              select: function(event, ui) {
                  $('input[name=\'search\']').val(ui.item.label);
                  $('.button-search').trigger('click');
                  return false;
              },
              position: {  collision: "fit"  },
              open: function() {
                  $("ul.ui-autocomplete").width( $(this).innerWidth() );
              },
              response: function (event, ui) {
                  if (ui.content[0]) {
                      // todo insert to placeholder
                      let re = new RegExp(event.target.value.toLowerCase(), "ig");
                      let t = ui.content[0].label.replace(re, event.target.value);
                      $('.advanced-search-field-placeholder').val(t)
                  } else {
                      $('.advanced-search-field-placeholder').val('')
                  }
              }
          }).data("ui-autocomplete")._renderItem = function (ul, item) {
              let re = new RegExp(this.term, "ig");
              let t = item.label.replace(re, "<span style='font-weight:bold;'>" + this.term + "</span>");
              return $("<li class='advanced-search-autocomplete-li'></li>")
                  .data("item.autocomplete", item)
                  .append("<a class='advanced-search-autocomplete-a'><i class='fa fa-search'></i><span class='advanced-search-autocomplete-span'>" + t + "</span></a>")
                  .appendTo(ul);
          };
      $('#advanced-search-field').data("ui-autocomplete")._resizeMenu = function () {
          let ul = this.menu.element;
          ul.outerWidth(this.element.outerWidth());
      }

      $("#advanced-search-field").keyup("search", function () {
          if (!this.value) {
              $('.advanced-search-field-placeholder').val('')
          }
      })
  })

